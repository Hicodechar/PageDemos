<span class="p_add">+}</span>
<span class="p_add">+static inline void vm_raw_write_end(struct vm_area_struct *vma)</span>
<span class="p_add">+{</span>
<span class="p_add">+	raw_write_seqcount_end(&amp;vma-&gt;vm_sequence);</span>
