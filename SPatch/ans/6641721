 	int dest_cpu;
 
<span class="p_chunk">@@ -5067,7 +5057,7 @@</span> <span class="p_context"> static void migrate_tasks(unsigned int dead_cpu)</span>
 	 */
 	update_rq_clock(rq);
 
<span class="p_del">-	for ( ; ; ) {</span>
<span class="p_add">+	for (;;) {</span>
 		/*
 		 * There&#39;s this thread running, bail when that&#39;s the only
