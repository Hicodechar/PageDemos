<span class="p_del">-		if (huge_pmd_unshare(mm, &amp;address, ptep))</span>
<span class="p_del">-			goto unlock;</span>
<span class="p_add">+		if (huge_pmd_unshare(mm, &amp;address, ptep)) {</span>
<span class="p_add">+			spin_unlock(ptl);</span>
