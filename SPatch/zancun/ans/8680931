<span class="quote">&gt;&gt;  	struct vm_unmapped_area_info info;</span>
<span class="quote">&gt;&gt; +	bool pud_size_align = false;</span>
<span class="quote">&gt;&gt; +	unsigned long ret_addr;</span>
