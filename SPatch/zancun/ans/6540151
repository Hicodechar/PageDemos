<span class="quote">&gt;</span>
<span class="quote">&gt; +static void page_remove_anon_compound_rmap(struct page *page)</span>
<span class="quote">&gt; +{</span>
<span class="quote">&gt; +	int i, nr;</span>
<span class="quote">&gt; +</span>
<span class="quote">&gt; +	if (!atomic_add_negative(-1, compound_mapcount_ptr(page)))</span>
<span class="quote">&gt; +		return;</span>
<span class="quote">&gt; +</span>
<span class="quote">&gt; +	/* Hugepages are not counted in NR_ANON_PAGES for now. */</span>
<span class="quote">&gt; +	if (unlikely(PageHuge(page)))</span>
<span class="quote">&gt; +		return;</span>
<span class="quote">&gt; +</span>
<span class="quote">&gt; +	if (!IS_ENABLED(CONFIG_TRANSPARENT_HUGEPAGE))</span>
<span class="quote">&gt; +		return;</span>
<span class="quote">&gt; +</span>
<span class="quote">&gt; +	__dec_zone_page_state(page, NR_ANON_TRANSPARENT_HUGEPAGES);</span>
<span class="quote">&gt; +</span>
<span class="quote">&gt; +	if (PageDoubleMap(page)) {</span>
<span class="quote">&gt; +		nr = 0;</span>
<span class="quote">&gt; +		ClearPageDoubleMap(page);</span>
<span class="quote">&gt; +		/*</span>
<span class="quote">&gt; +		 * Subpages can be mapped with PTEs too. Check how many of</span>
<span class="quote">&gt; +		 * themi are still mapped.</span>
<span class="quote">&gt; +		 */</span>
<span class="quote">&gt; +		for (i = 0; i &lt; HPAGE_PMD_NR; i++) {</span>
<span class="quote">&gt; +			if (atomic_add_negative(-1, &amp;page[i]._mapcount))</span>
<span class="quote">&gt; +				nr++;</span>
<span class="quote">&gt; +		}</span>
<span class="quote">&gt; +	} else {</span>
<span class="quote">&gt; +		nr = HPAGE_PMD_NR;</span>
<span class="quote">&gt; +	}</span>
<span class="quote">&gt; +</span>
<span class="quote">&gt; +	if (nr)</span>
<span class="quote">&gt; +		__mod_zone_page_state(page_zone(page), NR_ANON_PAGES, nr);</span>

-nr as we discussed on IRC.
<span class="quote">
&gt; +}</span>
<span class="quote">&gt; +</span>
<span class="quote">&gt;   /**</span>
<span class="quote">&gt;    * page_remove_rmap - take down pte mapping from a page</span>
