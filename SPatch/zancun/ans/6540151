 {
<span class="p_del">-	return atomic_read(&amp;(page)-&gt;_mapcount) &gt;= 0;</span>
<span class="p_add">+	return atomic_read(&amp;(page)-&gt;_mapcount) + compound_mapcount(page) &gt;= 0;</span>
 }
 
