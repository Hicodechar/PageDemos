<span class="quote">&gt; @@ -1176,33 +1238,25 @@ out:</span>
<span class="quote">&gt;    */</span>
<span class="quote">&gt;   void page_remove_rmap(struct page *page, bool compound)</span>
<span class="quote">&gt;   {</span>
<span class="quote">&gt; -	int nr = compound ? hpage_nr_pages(page) : 1;</span>
<span class="quote">&gt; -</span>
<span class="quote">&gt;   	if (!PageAnon(page)) {</span>
<span class="quote">&gt;   		VM_BUG_ON_PAGE(compound &amp;&amp; !PageHuge(page), page);</span>
<span class="quote">&gt;   		page_remove_file_rmap(page);</span>
<span class="quote">&gt;   		return;</span>
<span class="quote">&gt;   	}</span>
<span class="quote">&gt;</span>
<span class="quote">&gt; +	if (compound)</span>
<span class="quote">&gt; +		return page_remove_anon_compound_rmap(page);</span>
<span class="quote">&gt; +</span>
<span class="quote">&gt;   	/* page still mapped by someone else? */</span>
