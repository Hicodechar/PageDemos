<span class="quote">&gt;                 return -EINVAL;</span>
<span class="quote">&gt;</span>
<span class="quote">&gt; -       if (type == CLEAR_REFS_SOFT_DIRTY) {</span>
<span class="quote">&gt; -               soft_dirty_cleared = true;</span>
<span class="quote">&gt; -               pr_warn_once(&quot;The pagemap bits 55-60 has changed their meaning!&quot;</span>
<span class="quote">&gt; -                            &quot; See the linux/Documentation/vm/pagemap.txt for &quot;</span>
<span class="quote">&gt; -                            &quot;details.\n&quot;);</span>
<span class="quote">&gt; -       }</span>
<span class="quote">&gt; -</span>
<span class="quote">&gt;         task = get_proc_task(file_inode(file));</span>
<span class="quote">&gt;         if (!task)</span>
<span class="quote">&gt;                 return -ESRCH;</span>
<span class="quote">&gt; @@ -961,38 +937,26 @@ typedef struct {</span>
