<span class="p_chunk">@@ -305,6 +314,8 @@</span> <span class="p_context"> void __migration_entry_wait(struct mm_struct *mm, pte_t *ptep,</span>
 	 */
 	if (!get_page_unless_zero(page))
 		goto out;
<span class="p_add">+	if (is_zone_device_page(page))</span>
